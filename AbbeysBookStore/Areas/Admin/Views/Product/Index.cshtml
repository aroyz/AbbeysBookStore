@*
    Layout = "~/Views/Shared/_Layout.cshtml";
*@
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Product List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-outline-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Product</a>
    </div>
</div>
<br />
<div class="py-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered pt-3" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th class="bg-primary text-light">Title</th>
                <th class="bg-primary text-light">ISBN</th>
                <th class="bg-primary text-light">Price</th>
                <th class="bg-primary text-light">Author</th>
                <th class="bg-primary text-light">Category</th>
                <th class="bg-primary"></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}
